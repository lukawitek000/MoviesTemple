<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkYellow</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowBackground">@color/darkGrey</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>

        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/lightBlack</item>
    </style>

    <style name="labels" parent="android:TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents">
        <item name="android:background">@color/darkYellow</item>
        <item name="itemTextColor">@color/lightBlack</item>
        <item name="itemIconTint">@color/lightBlack</item>
    </style>

    <style name="actionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextColor">@color/darkGrey</item>
        <item name="android:titleTextColor">@color/darkGrey</item>
        <item name="android:background">@color/darkYellow</item>
        <item name="background">@color/darkYellow</item>
        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="android:colorControlNormal">@color/darkGrey</item>
    </style>

    <style name="expandedToolBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
