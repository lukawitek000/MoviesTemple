<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/popularMoviesFragment">

    <fragment
        android:id="@+id/popularMoviesFragment"
        android:name="com.example.android.popularmovies.fragments.PopularMoviesFragment"
        android:label="MainViewFragment" >
        <action
            android:id="@+id/action_popularMoviesFragment_to_detailInformationFragment"
            app:destination="@id/detailInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailInformationFragment"
        android:name="com.example.android.popularmovies.fragments.DetailInformationFragment"
        android:label="DetailInformationFragment" />
    <fragment
        android:id="@+id/favouriteMoviesFragment"
        android:name="com.example.android.popularmovies.fragments.FavouriteMoviesFragment"
        android:label="fragment_favourite_movies"
        tools:layout="@layout/fragment_favourite_movies" >
        <action
            android:id="@+id/action_favouriteMoviesFragment_to_detailInformationFragment"
            app:destination="@id/detailInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/topRatedMoviesFragment"
        android:name="com.example.android.popularmovies.fragments.TopRatedMoviesFragment"
        android:label="fragment_top_rated_movies"
        tools:layout="@layout/fragment_top_rated_movies" >
        <action
            android:id="@+id/action_topRatedMoviesFragment_to_detailInformationFragment"
            app:destination="@id/detailInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendMoviesFragment"
        android:name="com.example.android.popularmovies.fragments.RecommendMoviesFragment"
        android:label="fragment_recommend_movies"
        tools:layout="@layout/fragment_recommend_movies" >
        <action
            android:id="@+id/action_recommendMoviesFragment_to_detailInformationFragment"
            app:destination="@id/detailInformationFragment" />
    </fragment>
</navigation>